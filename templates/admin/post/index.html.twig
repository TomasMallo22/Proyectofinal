{% extends 'admin/base.html.twig' %}

{% block title %}Entradas {% endblock %}

{% block body %}
    <div class="container-fluid">
        <!-- /.row -->
        <div class="row">
          <div class="col-12">
            <div class="card">
              <div class="card-header">
                <h3 class="card-title">Entradas</h3>
                  <a href="{{ path('admin_post_new') }}"><button type="button" class="btn-sm btn-success">Nuevo</button></a>
                <div class="card-tools">
                  <div class="input-group input-group-sm" style="width: 150px;">
                    <input type="text" name="table_search" class="form-control float-right" placeholder="Search">

                    <div class="input-group-append">
                      <button type="submit" class="btn btn-default">
                        <i class="fas fa-search"></i>
                      </button>
                    </div>
                  </div>
                </div>
              </div>
              <!-- /.card-header -->
              <div class="card-body table-responsive p-0">
                <table class="table table-hover text-nowrap">
                        <thead>
                            <tr>
                                <th>Id</th>
                                <th>Titulo</th>
                                <th>CreatedAt</th>
                                <th>Contenido</th>
                                <th>Acciones</th>
                            </tr>
                        </thead>
                    <tbody>
    
                        {% for post in posts %}
                            <tr>
                                <td>{{ post.id }}</td>
                                <td>{{ post.titulo }}</td>
                                <td>{{ post.createdAt ? post.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                                <td>{{ post.contenido }}</td>
                                <td>
                                    <a href="{{ path('admin_post_show', {'id': post.id}) }}"><button type="button" class="btn btn-outline-info">Detalle</button></a>
                                    <a href="{{ path('admin_post_edit', {'id': post.id}) }}"><button type="button" class="btn btn-outline-warning">Editar</button></a>
                                        {{ include('admin/post/_delete_form.html.twig') }}
                                </td>
                            </tr>
                        {% else %}
                            <tr>
                                <td colspan="5">no records found</td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
              </div>
              <!-- /.card-body -->
            </div>
            <!-- /.card -->
          </div>
        </div>
        <!-- /.row -->
       
        <!-- /.row -->
      </div><!-- /.container-fluid -->
{% endblock %}
