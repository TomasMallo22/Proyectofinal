{% extends 'admin/base.html.twig' %}

{% block title %}Post{% endblock %}

{% block body %}
    <h1>Post</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ post.id }}</td>
            </tr>
            <tr>
                <th>Titulo</th>
                <td>{{ post.titulo }}</td>
            </tr>
            <tr>
                <th>CreatedAt</th>
                <td>{{ post.createdAt ? post.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Categoria</th>
                <td>{{ post.category.nombre }}</td>
            </tr>
            <tr>
                <th>Contenido</th>
                <td>{{ post.contenido | nl2br }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('admin_post_index') }}">back to list</a>

    <a href="{{ path('admin_post_edit', {'id': post.id}) }}">edit</a>

    {{ include('admin/post/_delete_form.html.twig') }}
{% endblock %}
