{% extends 'admin/core.html.twig' %}

  {% block sidebar %}
     <!-- Main Sidebar Container -->
  <aside class="main-sidebar sidebar-dark-primary elevation-4">
    <!-- Brand Logo -->
    <a href="{{url ('admin_post_index')}}" class="brand-link">
      <img src="{{asset ('admin/dist/img/AdminLTELogo.png')}}" alt="AdminLTE Logo" class="brand-image img-circle elevation-3" style="opacity: .8">
      <span class="brand-text font-weight-light">Admin Ecotomer</span>
    </a>
  
     
     <!-- Sidebar -->
    <div class="sidebar">
     
     <!-- Sidebar Menu -->
      <nav class="mt-2">
        <ul class="nav nav-pills nav-sidebar flex-column" data-widget="treeview" role="menu" data-accordion="false">
          <!-- Add icons to the links using the .nav-icon class
               with font-awesome or any other icon font library -->
          {% if is_granted('ROLE_USER')  or is_granted('ROLE_ADMIN')  %}
          <li class="nav-item">
            <a href="{{url ('admin_post_index')}}" class="nav-link">
              <i class="nav-icon fas fa-th"></i>
                <p>
                  Entradas
                </p>
            </a>
          </li>
          <li class="nav-item">
            <a href="{{url ('admin_category_index')}}" class="nav-link">
              <i class="nav-icon fas fa-th"></i>
                <p>
                  Categorias
                </p>
            </a>
          </li>
          {% endif %}
          {% if is_granted('ROLE_ADMIN') %}
          <li class="nav-item">
            <a href="{{url ('admin_admin_user_index')}}" class="nav-link">
              <i class="nav-icon fas fa-th"></i>
                <p>
                  Usuarios
                </p>
            </a>
          </li>
          <li class="nav-item">
            <a href="{{url ('admin_role_index')}}" class="nav-link">
              <i class="nav-icon fas fa-th"></i>
                <p>
                  Roles
                </p>
            </a>
          </li>
          {% endif %}
          <li class="nav-item">
            <a href="{{url ('app_logout')}}" class="nav-link">
              <i class="nav-icon fas fa-th"></i>
                <p>
                  Logout
                </p>
            </a>
          </li>
        </ul>
      </nav>
      <!-- /.sidebar-menu -->
    </div>
    <!-- /.sidebar -->
  </aside>
