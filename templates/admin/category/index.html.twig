{% extends 'admin/base.html.twig' %}

{% block title %}Categorias{% endblock %}

{% block body %}
    <h1>Categorias <a href="{{ path('admin_category_new') }}"><button type="button" class="btn-sm btn-success">Crear categoria</button></a> </h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nombre</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for category in categories %}
            <tr>
                <td>{{ category.id }}</td>
                <td>{{ category.nombre }}</td>
                <td>
                    <a href="{{ path('admin_category_show', {'id': category.id}) }}"><button type="button" class="btn btn-outline-info">Detalle</button></a>
                    <a href="{{ path('admin_category_edit', {'id': category.id}) }}"><button type="button" class="btn btn-outline-warning">Editar</button></a>
                    {{ include('admin/category/_delete_form.html.twig') }}
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    
{% endblock %}
